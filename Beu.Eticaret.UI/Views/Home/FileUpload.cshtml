@{
    Layout = "~/Views/Menus/_NavbarMenu.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<head>
    <link href="~/css/fileupload.css" rel="stylesheet" />
    <script>
        var accesToken = localStorage.getItem("Access-Token");
        if (accesToken == null || accesToken == 0) {
            window.location.href = "/Home/AccessDenied";
        }
    </script>
</head>
<h1>Beu Eticaret Anasayfa Ürün Yükleme</h1>
<br />


<form asp-controller="Home" asp-action="SingleFile" enctype="multipart/form-data" method="post">
    <input type="text" placeholder="Ürün Adı" id="txtProductName" />
    <br />
    <input type="text" placeholder="Ürün Fiyatı" id="txtProductPrice" />
    <br />
    <div class="input-file-container">
        <input class="input-file" name="file" type="file" id="file-Add">
        <label tabindex="0" for="my-file" class="input-file-trigger1">Dosya Seç</label>
    </div>
    <p class="file-return" id="file-address"></p>
    <br />
    <button type="submit" class="input-file-trigger" id="btn-file">Ekle</button>
</form>

<script src="~/js/jquery/jquery.js"></script>
<script src="~/js/app.js"></script>
<script src="~/js/app.api.js"></script>
<script src="~/js/app.api.product.js"></script>
<script src="~/js/filetransactions/fileupload.js"></script>
<script src="~/js/filetransactions/addproduct.js"></script>
