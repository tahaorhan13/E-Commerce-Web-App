@{ Layout = "~/Views/Menus/_NavbarMenu.cshtml"; }
<head>
    <link href="~/css/login.css" rel="stylesheet" />
    <link href="~/js/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/js/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script>
        var accesToken = localStorage.getItem("Access-Token");
        if (accesToken == null || accesToken == 0) {
            window.location.href = "/Home/AccessDenied";
        }
    </script>
</head>

<div class="container">

    <form class="well form-horizontal" action=" " method="post" id="contact_form">
        <fieldset>

            <!-- Form Name -->
            <legend><b>Registration Form</b></legend><br>

            <!-- Text input-->

            <div class="form-group">
                <label class="col-md-4 control-label">Name</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="bx bx-user"></i></span>
                        <input name="first_name" placeholder="Name" id="txtName" class="form-control" type="text">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Surname</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="bi bi-person"></i></span>
                        <input name="first_name" placeholder="Surname" id="txtSurname" class="form-control" type="text">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Email</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="bi bi-person"></i></span>
                        <input name="first_name" placeholder="Email" id="txtEmail" class="form-control" type="text">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Password</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="bi bi-person"></i></span>
                        <input name="first_name" placeholder="Password" id="txtPassword" class="form-control" type="text">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-4 control-label">Access Level</label>
                <div class="col-md-4 selectContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class=""></i></span>
                        <select name="department" id="sltAccessLevel" class="form-control selectpicker">
                            <option value="1">Admin</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Button -->
            <div class="form-group">
                <label class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <br>
                    <button type="button" class="btn btn-warning" id="btn-register">SUBMIT</button>
                </div>
            </div>

        </fieldset>
    </form>
</div>
<script src="~/js/jquery/jquery.js"></script>
<script src="~/js/app.js"></script>
<script src="~/js/app.api.js"></script>
<script src="~/js/app.api.account.js"></script>
<script src="~/js/account/adminregister.js"></script>